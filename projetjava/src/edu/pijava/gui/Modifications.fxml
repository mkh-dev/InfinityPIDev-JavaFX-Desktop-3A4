<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.pijava.gui.ModificationsController">
    <HBox spacing="10.0">
        <TextField fx:id="searchField" promptText="Rechercher par nom, prénom, email ou rôle utilisateur" />
        <Button onAction="#handleSearch" text="Rechercher" />
        <Button onAction="#handleRefresh" text="Rafraîchir" />
        <Button onAction="#handleAddUser" text="Ajouter utilisateur" />
        <HBox spacing="5.0">
            <Button onAction="#handleEditUser" text="Modifier utilisateur" />
            <Button onAction="#handleDeleteUser" text="Supprimer utilisateur" />
        </HBox>
    </HBox>
    <ListView fx:id="usersListView" prefHeight="300.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0" />
    <Label fx:id="userCountLabel" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" text="" />
</AnchorPane>



